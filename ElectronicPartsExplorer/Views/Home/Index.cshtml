@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/ElectronicParts.svg" alt="General Info" class="img-responsive" />
            <div class="carousel-caption-red" role="option" align="center">
                <p>
                    <br /><b>Provides useful details of technical information about specific electronic components.</b>
                    <a class="btn btn-default" href="../Home">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Resistors.svg" alt="Resistor Info" class="img-responsive" />
            <div class="carousel-caption-blue" role="option" align="center">
                <p>
                    <br /><b>Need Information about Resistors?  Just 1 click away...</b>
                        <a class="btn btn-default" asp-controller="ResistorColorDecoder" asp-action="Index">
                            <b>GO</b>
                        </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Transistors.svg" alt="Transistor Info" class="img-responsive" />
            <div class="carousel-caption-orange" role="option" align="center">
                <p>
                    <br /><b>Anything you need to know about technical information of Transistors</b>
                    <a class="btn btn-default" asp-controller="TransistorTechInfo" asp-action="Index">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
